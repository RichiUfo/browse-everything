<div class="browse-ev files">
  <table class="table table-striped table-condensed">
    <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Modified</th>
      <th>Type</th>
    </tr>
    </thead>
    <tbody>
    <% @provider.contents(params[:path]).each do |file| %>
    <tr>
      <td class="<%=file.container? ? 'container' : ''%>"><%= file.name %></td>
      <td><%= number_to_human_size(file.size) %></td>
      <td><%= file.mtime.strftime('%F %R') %></td>
      <td><%= file.mime_type %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>