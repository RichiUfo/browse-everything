<% if provider.present? %>
  <div class="ev-file-list ev-details">
    <% provider.contents(browse_path).each do |file| %>
    <div data-ev-location="<%= file.location %>" class="ev-entry <%=file.container? ? 'ev-container' : 'ev-file'%> ev-file-name">
      <span class="ev-entry-attr ev-entry-name"><%= link_to(file.name, browse_everything_engine.contents_path(provider_name,file.id)) %></span>
      <span class="ev-entry-attr ev-entry-size"><%= number_to_human_size(file.size).sub(/Bytes/,'bytes') %></span>
      <span class="ev-entry-attr ev-entry-date"><%= file.mtime.strftime('%F %R') %></span>
    </div>
    <% end %>
  </div>
<% end %>

